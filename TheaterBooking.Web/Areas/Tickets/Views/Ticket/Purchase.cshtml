@using TheaterBooking.Web.Database
@model TheaterBooking.Web.Areas.Tickets.Models.PurchaseViewModel
@{
    var showtime = (Showtime)ViewBag.Showtime;
}

Buy tickets for: @showtime.Movie.Movie_Name
<br/>
Show time: @((showtime.Show_Date + showtime.Show_Time).ToString("f"))
<br/>

@using (Html.BeginForm("Index", "Registration", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "help-block" })
    @Html.HiddenFor(m => m.ShowtimeId)

    <div class="form-group">
        @Html.LabelFor(m => m.Quantity, new { @class = "control-label" })
        @Html.EditorFor(m => m.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "help-block" })
    </div>
    <div class="form-group text-right">
        <button type="submit" class="btn btn-login btn-block btn-lg visible-xs">Purchase</button>
    </div>
}
